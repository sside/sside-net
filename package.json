{
    "name": "sside-net",
    "scripts": {
        "build": "turbo run build",
        "build:shared": "turbo run build:shared",
        "dev": "turbo run dev",
        "dev:shared": "npm run build:shared && turbo run dev:shared",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,yml,yaml,json}\"",
        "update:check": "ncu && turbo run update:check",
        "update:execute": "ncu -u && turbo run update:execute && npm install",
        "template": "plop",
        "prepare": "husky"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@inquirer/search": "^3.2.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "husky": "^9.1.7",
        "inquirer-autocomplete-prompt": "^3.0.1",
        "lint-staged": "^16.2.4",
        "npm-check-updates": "^19.1.0",
        "plop": "^4.0.4",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.0",
        "turbo": "^2.5.8"
    },
    "engines": {
        "node": ">=22"
    },
    "packageManager": "npm@11.6.2",
    "workspaces": [
        "app/*",
        "config/*",
        "library/*",
        "resource/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/sside/sside-net.git"
    },
    "private": true
}
