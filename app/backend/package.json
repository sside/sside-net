{
    "name": "@sside-net/backend",
    "version": "0.0.0",
    "description": "sside.net backend",
    "private": true,
    "scripts": {
        "start": "node dist/main",
        "dev": "dotenvx run --env-file ../../.env -- nest start --watch",
        "build": "nest build",
        "build:app": "npm run build",
        "lint": "eslint --fix",
        "test": "dotenvx run --env-file ../../.env.test -- jest",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "nest:generate": "nest generate",
        "update:check": "ncu",
        "update:execute": "ncu -u",
        "postinstall": "prisma generate"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.51.1",
        "@faker-js/faker": "^9.9.0",
        "@nestjs/common": "^11.1.6",
        "@nestjs/core": "^11.1.6",
        "@nestjs/platform-express": "^11.1.6",
        "@nestjs/swagger": "^11.2.0",
        "@prisma/client": "^6.17.1",
        "@sside-net/open-api": "*",
        "@sside-net/constant": "*",
        "@sside-net/utility": "*",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "helmet": "^8.1.0",
        "luxon": "^3.7.2",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.9",
        "@nestjs/testing": "^11.1.6",
        "@sside-net/eslint": "*",
        "@sside-net/jest": "*",
        "@swc/cli": "^0.7.9",
        "@swc/core": "^1.13.5",
        "@types/express": "^5.0.5",
        "@types/luxon": "^3.7.1",
        "@types/node": "^22",
        "@types/supertest": "^6.0.3",
        "globals": "^16.5.0",
        "prisma": "^6.17.1",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3"
    }
}
